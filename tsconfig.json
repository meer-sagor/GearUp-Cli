{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "NodeNext", // Ensures compatibility with ESM syntax
    "moduleResolution": "NodeNext", // ESM-aware module resolution
    "target": "ES2022", // Modern JavaScript features
    "outDir": "dist", // Output directory for compiled files
    "strict": true, // Enables all strict type-checking options
    "resolveJsonModule": true, // Allows importing JSON files
    "esModuleInterop": true, // Provides interoperability between CommonJS and ESM
    "skipLibCheck": true, // Skips type checking for node_modules to improve build time
    "allowImportingTsExtensions": true,
    "baseUrl": "src",
    "paths": {
      "@utils/*": ["utils/*"], // Map '@utils' to 'src/utils'
      "@enums/*": ["enums/*"], // Map '@enums' to 'src/enums'
      "@commands/*": ["commands/*"] // Map '@enums' to 'src/enums'
    }
  },
  "include": [
    "./src/**/*" // Include all source files
  ],
  "ts-node": {
    "esm": true // Allows `ts-node` to handle ESM syntax
  }
}
